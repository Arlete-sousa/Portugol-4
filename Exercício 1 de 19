programa
{
     inteiro numero
	
	funcao inicio()
	{
	escreva("Digite um número: ")
	leia(numero)

	se (numero < 0){
	escreva("Negativo\n")
	}
	senao{
	se (numero > 0){
	escreva("Positivo\n")
	}
	senao{
	escreva("Igual a zero\n")
			}
		}
	}
}

